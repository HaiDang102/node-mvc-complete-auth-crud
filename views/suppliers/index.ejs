<%- include('../partials/header') %>
    <h2>Danh sách Nhà cung cấp</h2>
    <a href="/suppliers/new">+ Thêm nhà cung cấp</a>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% suppliers.forEach(s => { %>
                <tr>
                    <td>
                        <%= s.name %>
                    </td>
                    <td>
                        <%= s.address || '' %>
                    </td>
                    <td>
                        <%= s.phone || '' %>
                    </td>
                    <td>
                        <a href="/suppliers/<%= s._id %>/edit">Edit</a>
                        <form method="POST" action="/suppliers/<%= s._id %>?_method=DELETE" style="display:inline">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <%- include('../partials/footer') %>