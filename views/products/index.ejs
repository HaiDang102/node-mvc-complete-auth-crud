<%- include('../partials/header') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Danh sách Sản phẩm</h2>
            <a href="/products/new" class="btn btn-success">+ Thêm sản phẩm</a>
        </div>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Nhà cung cấp</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(p => { %>
                    <tr>
                        <td>
                            <%= p.name %>
                        </td>
                        <td>
                            <%= p.price %>
                        </td>
                        <td>
                            <%= p.quantity %>
                        </td>
                        <td>
                            <%= p.supplierId ? p.supplierId.name : 'N/A' %>
                        </td>
                        <td>
                            <a href="/products/<%= p._id %>/edit" class="btn btn-sm btn-primary me-1">Sửa</a>
                            <form method="POST" action="/products/<%= p._id %>?_method=DELETE" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/footer') %>